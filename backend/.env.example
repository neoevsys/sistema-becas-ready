# Puerto del servidor
PORT=5000

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# Base de datos MongoDB
MONGO_URI=mongodb://mongo:27017/becasdb

# JWT Configuration
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion
JWT_EXPIRES=7d

# CORS Configuration
# Lista de orígenes permitidos separados por comas
# En desarrollo se puede usar * para permitir todos
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Configuration
MAX_UPLOAD_MB=10
FILE_STORAGE=local

# Admin por defecto (para seeding)
ADMIN_DEFAULT_EMAIL=admin@becas.com
ADMIN_DEFAULT_PASSWORD=Admin123!

# Logging Level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info

# Session Configuration (opcional)
SESSION_SECRET=tu_session_secret_aqui

# Email Configuration (para futuras notificaciones)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu-email@gmail.com
# SMTP_PASS=tu-app-password
# FROM_EMAIL=noreply@becas.com

# S3 Configuration (opcional, para FILE_STORAGE=s3)
# AWS_ACCESS_KEY_ID=tu-access-key
# AWS_SECRET_ACCESS_KEY=tu-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=tu-bucket-name

# Redis Configuration (opcional, para sesiones o cache)
# REDIS_URL=redis://localhost:6379

# Sentry Configuration (opcional, para error tracking)
# SENTRY_DSN=tu-sentry-dsn

# Webhook Configuration (opcional)
# WEBHOOK_SECRET=tu-webhook-secret
